<template>
  <view class="box">
    <view class="common"
          @click="goBanCard">
      <view>银行卡</view>
      <view>
        <image src="../../static/vip/right.png"></image>
      </view>
    </view>
    <view class="common"
          @click="goWeiXin">
      <view>微信</view>
      <view>
        <image src="../../static/vip/right.png"></image>
      </view>
    </view>
    <view class="common"
          @click="goZhiFuBao">
      <view>支付宝</view>
      <view>
        <image src="../../static/vip/right.png"></image>
      </view>
    </view>
  </view>
</template>

<script>
export default {
  data() {
    return {
      // 银行卡 10 微信 12 支付宝 11
      // 总的数据
      list: [],
      // 银行卡数据
      cardList: [],
      // 微信数据
      weiXinList: [],
      // 支付宝数据
      zhiFuBaoList: []
    };
  },
  onShow() {
    // 查询银行卡、微信、支付宝
    this.getQuery()
  },
  methods: {
    // 查询银行卡、微信、支付宝
    async getQuery() {
      let result = {}
      result = JSON.stringify(result)
      let datas = {
        action: 'ReadPaymentInformation',
        data: result
      }
      let res = await this.$api.api.query(datas)
      if (res.data.status == true) {
        console.log(res)
        this.list = res.data.data
        for (var i = 0; i < this.list.length; i++) {
          if (this.list[i].Type == 10) {
            this.cardList.push(this.list[i])
          } else if (this.list[i].Type == 12) {
            this.weiXinList.push(this.list[i])
          } else if (this.list[i].Type == 11) {
            this.zhiFuBaoList.push(this.list[i])
          }
        }
      }
    },
    // 去绑定银行卡页面
    goBanCard() {
      // 判断 如果是 type 为 0 那么就是添加 为 1 就是查询 修改
      if (this.cardList.length == 0) {
        var type = 0
      } else {
        var type = 1
      }
      uni.navigateTo({
        url: '/pages/binding/bankCard?type=' + type
      })
    },
    // 去绑定微信页面
    goWeiXin() {
      // 判断 如果是 type 为 0 那么就是添加 为 1 就是查询 修改
      if (this.weiXinList.length == 0) {
        var type = 0
      } else {
        var type = 1
      }
      uni.navigateTo({
        url: '/pages/binding/weiXin?type=' + type
      })
    },
    // 去绑定支付宝页面
    goZhiFuBao() {
      // 判断 如果是 type 为 0 那么就是添加 为 1 就是查询 修改
      if (this.zhiFuBaoList.length == 0) {
        var type = 0
      } else {
        var type = 1
      }
      uni.navigateTo({
        url: '/pages/binding/zhiFuBao?type=' + type
      })
    }
  }
};
</script>

