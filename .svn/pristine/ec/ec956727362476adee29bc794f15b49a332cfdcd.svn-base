<script>
	export default {
		data() {
			return {
				id:'',
				detail:'',
				dateFlag:false,
				status:1,//0代表未接单1代表已付款 备注1和3差不多
				overTime:'',
				order:[
					{
						status:'等待服务商确认接单',
						name:"转账金额",
						image:'/static/vip/money.png',
						price:100,
					},
					{
